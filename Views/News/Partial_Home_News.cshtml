@model IEnumerable<WebBanHang.Models.EF.News>
<div style=" background: #f7fff3; ">
    @if (Model.Any() && Model != null)
    {
        <div class="blogs">
            <div class="container">
                <div class="row">
                    <div class="col text-center">
                        <div class="section_title">
                            <h2>Tin tức mới nhất</h2>
                        </div>
                    </div>
                </div>
                <div class="row blogs_container">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 blog_item_col">
                            <div class="blog_item">
                                <div class="blog_background" style="background-image:url(@item.Image)"></div>
                                <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                    <h4 class="blog_title">@item.Title</h4>
                                    <span class="blog_meta">Đăng ngày @item.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    <a style="color: #61974C" class="blog_more" href="@item.Alias-n@(item.Id)">Đọc</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <p style="padding:20px 0px 20px 0">
                    <a href="/tin-tuc">
                        <span class="more">
                            Xem thêm
                        </span>
                    </a>
                </p>
            </div>
        </div>

    }

</div>
